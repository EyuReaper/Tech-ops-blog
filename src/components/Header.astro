---
// src/components/Header.astro
import ThemeToggle from './ThemeToggle.vue';
import AnimatedTechOps from './AnimatedTechops.vue';
---

<header class="bg-[var(--color-bg)] border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50 backdrop-blur-sm bg-opacity-90">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center gap-3 group">
      <!-- Logo Icon -->
      <div class="w-10 h-10 bg-[var(--color-primary)] rounded-lg flex items-center justify-center text-white font-bold text-lg shadow-lg">
        TO
      </div>

      <!-- Animated Gradient Text -->
<client-only>
  <AnimatedTechOps
    text="Tech Ops"
    class-name="text-3xl  group-hover:animate-gradient-x"
    :show-border="false"
    client:load
  />
</client-only>    </a>

    <nav class="hidden md:flex items-center gap-8">
      <a href="/" class="nav-link">Home</a>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/portfolio" class="nav-link">Portfolio</a>
      <a href="/contact" class="nav-link">Contact</a>
    </nav>

    <client-only>
      <ThemeToggle client:load />
    </client-only>
  </div>
</header>

<style is:global>
  .nav-link {
    @apply text-[var(--color-text)] font-medium hover:text-[var(--color-accent)] transition;
  }
</style>